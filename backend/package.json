{
  "name": "architrack-backend",
  "version": "1.0.0",
  "description": "ArchiTrack Backend API",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run prisma:generate && tsc && npm run docs:generate",
    "start": "node dist/src/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:node": "npm run build && node dist/src/index.js",
    "dev:js": "node --watch src/index.js",
    "check:env": "tsx src/check-env.ts",
    "validate:esm": "npm run build && node --check dist/src/index.js && find dist -name '*.js' -type f -exec node --check {} \\;",
    "test": "vitest run",
    "test:unit": "vitest run src/__tests__/unit",
    "test:integration": "RUN_INTEGRATION_TESTS=true vitest run src/__tests__/integration",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit:coverage": "vitest run --coverage src/__tests__/unit",
    "test:integration:coverage": "RUN_INTEGRATION_TESTS=true vitest run --coverage src/__tests__/integration",
    "test:all": "RUN_INTEGRATION_TESTS=true vitest run",
    "test:perf": "tsx performance/health-check.perf.ts",
    "test:perf:report": "autocannon -c 10 -d 30 http://localhost:3000/health",
    "docs:generate": "tsx src/generate-swagger.ts",
    "lint": "eslint src/**/*.{js,ts} vitest.*.ts performance/**/*.ts scripts/**/*.ts prisma/**/*.ts",
    "lint:fix": "eslint src/**/*.{js,ts} vitest.*.ts performance/**/*.ts scripts/**/*.ts prisma/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\" \"vitest.*.ts\" \"performance/**/*.ts\" \"scripts/**/*.ts\" \"prisma/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\" \"vitest.*.ts\" \"performance/**/*.ts\" \"scripts/**/*.ts\" \"prisma/**/*.ts\"",
    "type-check": "npm run prisma:generate && tsc --noEmit",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "audit:production": "npm audit --omit=dev",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "tsx prisma/seed.ts",
    "prisma:studio": "prisma studio",
    "prisma:format": "prisma format",
    "generate:jwt-keys": "tsx scripts/generate-eddsa-keys.ts"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "@prisma/client": "^6.19.0",
    "@sentry/node": "^10.22.0",
    "@sentry/profiling-node": "^10.25.0",
    "@types/bull": "^4.10.4",
    "@types/handlebars": "^4.1.0",
    "@types/nodemailer": "^7.0.4",
    "@types/qrcode": "^1.5.6",
    "bloom-filters": "^3.0.4",
    "bull": "^4.16.5",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dataloader": "^2.2.3",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "jose": "^5.10.0",
    "nodemailer": "^7.0.10",
    "otplib": "^12.0.1",
    "pg": "^8.11.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "qrcode": "^1.5.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ua-parser-js": "^2.0.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/autocannon": "^7.12.7",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.8",
    "autocannon": "^8.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.0.11",
    "lint-staged": "^16.2.6",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vitest": "^4.0.6"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "prisma/schema.prisma": [
      "prisma format"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
