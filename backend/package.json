{
  "name": "architrack-backend",
  "version": "1.0.0",
  "description": "ArchiTrack Backend API",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run prisma:generate && tsc && npm run docs:generate",
    "start": "node dist/src/index.js",
    "dev": "tsx watch src/index.ts",
    "dev:js": "node --watch src/index.js",
    "test": "vitest run",
    "test:unit": "vitest run src/__tests__/unit",
    "test:integration": "vitest run src/__tests__/integration",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit:coverage": "vitest run --coverage src/__tests__/unit",
    "test:integration:coverage": "vitest run --coverage src/__tests__/integration",
    "test:perf": "tsx performance/health-check.perf.ts",
    "test:perf:report": "autocannon -c 10 -d 30 http://localhost:3000/health",
    "docs:generate": "tsx src/generate-swagger.ts",
    "lint": "eslint src/**/*.{js,ts}",
    "lint:fix": "eslint src/**/*.{js,ts} --fix",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts}\"",
    "type-check": "npm run prisma:generate && tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:format": "prisma format"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0",
    "@sentry/node": "^10.22.0",
    "@sentry/profiling-node": "^10.25.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/autocannon": "^7.12.7",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.2",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.8",
    "autocannon": "^8.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.0.11",
    "lint-staged": "^16.2.6",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vitest": "^4.0.6"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "prisma/schema.prisma": [
      "prisma format"
    ]
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
