FROM node:20-slim

WORKDIR /app

# ヘルスチェック用にcurlをインストール
RUN apt-get update && \
    apt-get install -y --no-install-recommends curl && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

COPY package*.json ./

RUN rm -rf node_modules package-lock.json && npm install

COPY . .

EXPOSE 3000

CMD ["npm", "run", "dev"]
