# ArchiTrack Development Environment Configuration
# Usage: docker compose -f docker-compose.yml -f docker-compose.dev.yml --env-file .env.dev up
# Or: npm run dev:docker
#
# Copy this file to .env.dev and update the values:
#   cp .env.dev.example .env.dev

# Node Environment
NODE_ENV=development

# Database (Development)
DATABASE_URL=postgresql://postgres:dev@postgres:5432/architrack_dev

# Redis
REDIS_URL=redis://redis:6379

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Vite API URL (for frontend)
VITE_API_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Development Settings
DISABLE_RATE_LIMIT=true

# JWT Keys (Ed25519)
# Generate new keys: npm --prefix backend run generate-keys
JWT_PUBLIC_KEY=<your-jwt-public-key-base64>
JWT_PRIVATE_KEY=<your-jwt-private-key-base64>

# Two-Factor Authentication Encryption Key (64 hex characters)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TWO_FACTOR_ENCRYPTION_KEY=<your-64-char-hex-key>

# Initial Admin Account (for database seeding)
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=<your-secure-password>
INITIAL_ADMIN_DISPLAY_NAME=System Administrator
