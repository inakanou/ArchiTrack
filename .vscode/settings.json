{
  // cSpell設定
  "cSpell.words": [
    "ArchiTrack",
    "architrack",
    "ARCHITRACK",
    "beforeunload",
    "networkidle",
    "spinbutton"
  ],

  // TypeScript設定
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // デバッグ設定
  "debug.javascript.autoAttachFilter": "onlyWithFlag",
  "debug.javascript.terminalOptions": {
    "skipFiles": [
      "<node_internals>/**"
    ]
  },

  // Playwright設定
  "playwright.env": {
    "PWDEBUG": "1"
  },
  "playwright.reuseBrowser": true,

  // Vitest Explorer設定
  // ベストプラクティス: 拡張機能の自動検出に委ねる
  // backend/vitest.config.ts と frontend/vitest.config.ts を自動発見する
  // @see https://github.com/vitest-dev/vscode

  // エディタ設定
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // ファイル除外設定
  // ベストプラクティス: ビルド・テスト生成物を監視対象から除外してパフォーマンス最適化
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/.git/**": true,
    "**/test-results/**": true,
    "**/playwright-report/**": true,
    "**/.vitest-reports/**": true,
    "**/blob-report/**": true,
    "**/.logs/**": true
  },

  // 検索除外設定
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true,
    "**/test-results": true,
    "**/playwright-report": true,
    "**/.vitest-reports": true,
    "**/blob-report": true,
    "**/.logs": true
  },

  // ESLint設定
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.workingDirectories": [
    "./frontend",
    "./backend"
  ]
}
