FROM node:20-slim

WORKDIR /app

# ヘルスチェック用にcurlをインストール
RUN apt-get update && \
    apt-get install -y --no-install-recommends curl && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

COPY package*.json ./

# npm installを実行（Debianベースなのでネイティブモジュールの互換性問題なし）
RUN npm install

COPY . .

EXPOSE 5173

CMD ["npm", "run", "dev"]
