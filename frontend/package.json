{
  "name": "architrack-frontend",
  "version": "1.0.0",
  "description": "ArchiTrack Frontend",
  "type": "module",
  "scripts": {
    "postinstall": "playwright install chromium",
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "tsc && vite build --mode production && echo 'Bundle analysis report generated at dist/stats.html'",
    "bundle:check": "node scripts/check-bundle-size.js",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test-storybook": "test-storybook",
    "test-storybook:ci": "concurrently -k -s first -n \"SB,TEST\" -c \"magenta,blue\" \"npm run build-storybook --quiet && npx http-server storybook-static --port 6006 --silent\" \"wait-on tcp:127.0.0.1:6006 && npm run test-storybook\"",
    "storybook:coverage": "node scripts/check-storybook-coverage.cjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "mkdir -p coverage/.tmp && NODE_OPTIONS='--max-old-space-size=3072' vitest run --coverage",
    "coverage:check": "node scripts/check-coverage-gaps.cjs",
    "test:lightweight": "vitest run --project lightweight",
    "test:api": "vitest run --project api",
    "test:contexts": "vitest run --project contexts",
    "test:hooks-auth": "vitest run --project hooks-auth",
    "test:hooks-ui": "vitest run --project hooks-ui",
    "test:hooks-site-survey": "vitest run --project hooks-site-survey",
    "test:hooks-canvas": "vitest run --project hooks-canvas",
    "test:hooks-form-1": "vitest run --project hooks-form-1",
    "test:hooks-form-2": "vitest run --project hooks-form-2",
    "test:components-core": "vitest run --project components-core",
    "test:projects": "vitest run --project projects",
    "test:quantity-table": "vitest run --project quantity-table",
    "test:site-surveys": "vitest run --project site-surveys",
    "test:trading-partners": "vitest run --project trading-partners",
    "test:pages": "vitest run --project pages",
    "test:integration": "vitest run --project integration",
    "test:all-staged": "npm run test:lightweight && npm run test:api && npm run test:contexts && npm run test:hooks-auth && npm run test:hooks-ui && npm run test:hooks-site-survey && npm run test:hooks-canvas && npm run test:hooks-form-1 && npm run test:hooks-form-2 && npm run test:components-core && npm run test:projects && npm run test:quantity-table && npm run test:site-surveys && npm run test:trading-partners && npm run test:pages && npm run test:integration",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx} vitest.*.ts",
    "lint:fix": "eslint src/**/*.{js,jsx,ts,tsx} vitest.*.ts --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\" \"vitest.*.ts\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx}\" \"vitest.*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@sentry/react": "^10.32.1",
    "fabric": "^6.9.1",
    "jspdf": "^4.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.57.0",
    "@storybook/react": "^10.1.8",
    "@storybook/react-vite": "^10.1.5",
    "@storybook/test-runner": "^0.24.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-istanbul": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.23",
    "axe-playwright": "^2.2.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^16.5.0",
    "http-server": "^14.1.1",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "rollup-plugin-visualizer": "^6.0.5",
    "storybook": "^10.1.10",
    "tailwindcss": "^4.1.18",
    "terser": "^5.36.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.2.7",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  }
}
