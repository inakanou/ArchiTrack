{
  "name": "architrack",
  "version": "1.0.0",
  "description": "ArchiTrack E2E Tests",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "npx prisma generate",
    "dev:docker": "docker compose -p architrack-dev -f docker-compose.yml -f docker-compose.dev.yml --env-file .env.dev up",
    "dev:docker:build": "docker compose -p architrack-dev -f docker-compose.yml -f docker-compose.dev.yml --env-file .env.dev up --build",
    "dev:docker:down": "docker compose -p architrack-dev -f docker-compose.yml -f docker-compose.dev.yml --env-file .env.dev down",
    "dev:docker:logs": "docker compose -p architrack-dev -f docker-compose.yml -f docker-compose.dev.yml --env-file .env.dev logs -f",
    "test:docker": "docker compose -p architrack-test -f docker-compose.yml -f docker-compose.test.yml --env-file .env.test up -d",
    "test:docker:build": "docker compose -p architrack-test -f docker-compose.yml -f docker-compose.test.yml --env-file .env.test up -d --build",
    "test:docker:down": "docker compose -p architrack-test -f docker-compose.yml -f docker-compose.test.yml --env-file .env.test down",
    "test:docker:logs": "docker compose -p architrack-test -f docker-compose.yml -f docker-compose.test.yml --env-file .env.test logs -f",
    "test:e2e": "cross-env NODE_ENV=test DISABLE_RATE_LIMIT=true DATABASE_URL=postgresql://postgres:test@localhost:5433/architrack_test playwright test",
    "test:e2e:ui": "cross-env NODE_ENV=test DISABLE_RATE_LIMIT=true DATABASE_URL=postgresql://postgres:test@localhost:5433/architrack_test playwright test --ui",
    "test:e2e:headed": "cross-env NODE_ENV=test DISABLE_RATE_LIMIT=true DATABASE_URL=postgresql://postgres:test@localhost:5433/architrack_test playwright test --headed",
    "test:e2e:debug": "cross-env NODE_ENV=test DISABLE_RATE_LIMIT=true DATABASE_URL=postgresql://postgres:test@localhost:5433/architrack_test playwright test --debug",
    "test:e2e:report": "playwright show-report $(ls -td playwright-report/*/ | head -1)",
    "test:coverage": "npm --prefix backend run test:coverage && npm --prefix frontend run test:coverage",
    "lint": "eslint e2e/**/*.{js,ts} playwright.config.{js,ts} scripts/**/*.ts",
    "lint:fix": "eslint e2e/**/*.{js,ts} playwright.config.{js,ts} scripts/**/*.ts --fix",
    "format": "prettier --write \"e2e/**/*.{js,ts}\" \"playwright.config.{js,ts}\" \"scripts/**/*.ts\"",
    "format:check": "prettier --check \"e2e/**/*.{js,ts}\" \"playwright.config.{js,ts}\" \"scripts/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "check:req-coverage": "npx tsx scripts/check-requirement-coverage.ts",
    "check:req-coverage:verbose": "npx tsx scripts/check-requirement-coverage.ts --verbose",
    "check:req-coverage:json": "npx tsx scripts/check-requirement-coverage.ts --json",
    "audit:security": "node scripts/security-audit.mjs",
    "audit:security:verbose": "node scripts/security-audit.mjs --verbose",
    "audit:security:warn": "node scripts/security-audit.mjs --mode=warn",
    "coverage:staged:backend": "node scripts/check-staged-coverage.cjs --project=backend",
    "coverage:staged:frontend": "node scripts/check-staged-coverage.cjs --project=frontend",
    "prepare": "husky"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.48.1",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "prisma": "^7.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0"
  },
  "overrides": {
    "hono": "^4.11.4"
  }
}
